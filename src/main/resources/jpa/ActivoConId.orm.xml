<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm 
                                     http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
                 version="1.0">

    <entity name="activo" class="com.example.proyecto.entidades.ActivoConId" access="FIELD">
        <table name="ACTIVOS"/>
      
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            
             <basic name="capacidad" optional="false">
                <column name="CAPACIDAD"/>
            </basic>
             <many-to-one name="usuarios" optional="false"><!-- fetch="LAZY">-->
                <join-column name="ID_USUARIO" referencedColumnName="ID"/>
            </many-to-one>
        </attributes>
    </entity>
</entity-mappings>